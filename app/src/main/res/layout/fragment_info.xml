<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3500, 00"
                android:textColor="@color/blue_dark"
                android:textSize="40sp"
                android:textStyle="bold"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_bill"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/blue_dark"
                />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/get_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            app:cardElevation="3dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#59779e"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                >
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/get_coins"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="14dp"
                    android:background="@drawable/button_solid_blue"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_graduation"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/spend_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="8dp"
            app:cardElevation="3dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#59779e"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/where_pay"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="14dp"
                    android:background="@drawable/button_solid_blue"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_coffee"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="3dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#59779e"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/partners"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="14dp"
                    android:background="@drawable/button_solid_blue"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_bus"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>